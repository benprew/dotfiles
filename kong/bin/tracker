#!/usr/bin/env ruby

require 'rubygems'
require 'httparty'

DATA_PROJ_ID = 1503382

class Tracker
  include HTTParty
  base_uri "https://www.pivotaltracker.com/services/v3"

  def initialize
    @token = File.read("#{ENV['HOME']}/.pt_token").chomp
  end

  def story(story_id)
    options = { :headers => {'X-TrackerToken' => @token} }
    self.class.get("/projects/#{DATA_PROJ_ID}/stories/#{story_id}", options).parsed_response
  end

  def slug(story_id)
    story_info = story(story_id)
    title = story_info["story"]["name"].
      gsub(/\bthe\b/, '').
      gsub(/\s+/, '-').
      downcase.
      gsub(/[^a-z0-9-]/, '')[0,60]
    "#{story_info['story']['id']}-#{title}"
  end

end

story_id = ARGV[0]
method = ARGV[1]

tracker = Tracker.new
if tracker.respond_to?(method.to_sym)
  print tracker.send(method.to_sym, story_id)
else
  print tracker.story(story_id)["story"][method]
end
