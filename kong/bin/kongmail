#!/bin/bash

export PATH=$PATH:/usr/local/bin
export EDITOR='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient'

notmuch new

notmuch tag -new -- tag:new and from:pkeen@kongregate.com
notmuch tag +testing -new -- tag:new and to:testing@kongregate.com
notmuch tag +alerts -new -- tag:new and to:italerts@kongregate.com

notmuch tag +tracker -- tag:new and from:notifications@pivotaltracker.com
notmuch tag +git -- tag:new and from:reply.github.com

notmuch tag +inbox +unread -new -- tag:new

$EDITOR -e "(notmuch-hello-update t)"