#!/bin/bash

VALUE=$1
UNITS=$2

# convert from unit $UNITS to most reasonable human readable unit

if [[ $UNITS == 'bytes' || $UNITS == 'b' ]]; then
    sizes="B /kB/MB/GB/TB/PB/EB/ZB/YB"
    x=$VALUE
    s=-1
    while [[ $(printf "%.0f\n" "$x") -gt 1000 ]]; do
        s=$(( s + 3))
        x=$(echo "scale=2; $x / 1000" | bc)
    done
    s=$(( s + 1))
    echo "$x ${sizes:$s:2}"
fi
