#!/bin/bash

## -*- mode: shell-script; sh-shell: bash; sh-basic-offset: 2; sh-indentation: 2; coding: utf-8 -*-

# All the default Omadora aliases and functions
# (don't mess with these directly, just overwrite them here!)
source ~/.local/share/omadora/default/bash/rc

# Source from .bashrc.d files
if [ -d ~/.bashrc.d ]; then
    for rc in ~/.bashrc.d/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc


