#!/usr/bin/env ruby

require 'rubygems'
require 'httparty'
require 'net/netrc'
require 'tempfile'

note_id = ARGV.shift
unless note_id
  $stderr.puts("usage: append [note_id] [message]")
  exit 1
end

class Notes
  include HTTParty
  base_uri 'https://notes.bugsplat.info'

  def initialize(user, pass)
    self.class.basic_auth user, pass
  end

  def append(id, body)
    self.class.post("/notes/#{id}/append.json", :body => { :body => body } )
  end
end

rc = Net::Netrc.locate('notes.bugsplat.info') or raise ".netrc missing"

body = ARGV.join(" ")
if body.strip == ""
  temp = Tempfile.new(['journal', '.md'])
  system(ENV['EDITOR'], temp.path)
  body = temp.read
end

if body.strip == ""
  exit 0
end

Notes.new(rc.login, rc.password).append(note_id, body)
